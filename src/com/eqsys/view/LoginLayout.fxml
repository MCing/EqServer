<VBox id="login-background" alignment="CENTER" stylesheets="@demo.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.eqsys.view.LoginLayoutController">
   <children>
      <GridPane id="login-pane-background" alignment="CENTER" maxHeight="300.0" maxWidth="400.0" minHeight="235.0" minWidth="400.0" prefHeight="235.0" prefWidth="400.0" stylesheets="@demo.css">
         <children>
            <ImageView fitHeight="52.0" fitWidth="114.0" pickOnBounds="true" preserveRatio="true" GridPane.halignment="RIGHT">
               <image>
                  <Image url="@images/img_icon.png" />
               </image>
            </ImageView>
            <Label text="管理员登录" GridPane.columnIndex="1" GridPane.halignment="CENTER">
               <font>
                  <Font size="26.0" />
